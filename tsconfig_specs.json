{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "classic",
        "outDir": "./tmp/specs-es6",
        "baseUrl": "./specs",
        "paths": {
            "platter/*": [
                "../src/platter/*"
            ],
            "babel-polyfill": [
                "../node_modules/babel-polyfill/dist/polyfill.js"
            ],
            "*": [
                "../lib/*"
            ]
        }
    },
    "include": ["specs/**/*.ts"],
    "exclude": ["node_modules/**"]
}